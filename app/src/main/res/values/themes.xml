<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChatApp" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- no toolbar -->
        <item name="windowNoTitle">true</item>

        <!-- colore status + navigation bar, sfondo NON FUNZIONA -->
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?colorSurfaceContainer</item>

        <!-- colore sfondo status + navigation bar, simboli -->
        <item name="android:windowLightStatusBar">@bool/light_icons</item>
        <item name="android:windowLightNavigationBar">@bool/light_icons</item>

    </style>

    <style name="Theme.ChatApp" parent="Base.Theme.ChatApp" />
</resources>