<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedImageButton">
        <item name="android:background">@drawable/baseline_circle</item>
        <item name="android:elevation">4dp</item>
    </style>


    <style name="RoundedImageViewDetail" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundedImageViewChats" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="RoundedImageMessage" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>


    <style name="ProgressBarStyle">
        <item name="android:visibility">visible</item>
        <item name="android:elevation">4dp</item>
        <item name="android:indeterminate">true</item>
    </style>


    <style name="Primary_Text_Style">
        <item name="android:textColor">?colorOnSurface</item>
    </style>


    <style name="Username_Text_Style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>