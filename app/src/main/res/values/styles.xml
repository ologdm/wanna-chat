<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--minimo indispensabile-->

    <style name="RoundedImageButton">
        <item name="android:background">@drawable/baseline_circle</item>
        <item name="android:elevation">4dp</item>
    </style>


    <style name="RoundedImageViewDetail" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="RoundedImageViewChats" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>


    <style name="ES_ProgressBarStyle">
        <item name="android:visibility">gone</item>
        <item name="android:elevation">4dp</item>
        <item name="android:indeterminate">true</item>
    </style>


    <style name="ES_ErrorTextStyle">
        <item name="android:visibility">gone</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">?attr/colorSurfaceContainer</item>
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>


</resources>